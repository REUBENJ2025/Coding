# Users enter a number between 1 and 100

score = 0

def fizz(myNumber, choice):
    if myNumber % 3 == 0 and myNumber % 5 == 0:
        return fizzbuzz(myNumber, choice)
    elif myNumber % 3 == 0:
        if choice == "fizz":
            print("Fizz")
            return 1
        else:
            print("Incorrect, should be fizz")
            return 0
    elif myNumber % 5 == 0:
        return buzz(myNumber, choice)
    else:
        return numberoutput(myNumber, choice)

def buzz(myNumber, choice):
    if choice == "buzz":
        print("Buzz")
        return 1
    else:
        print("Incorrect, should be buzz")
        return 0

def fizzbuzz(myNumber, choice):
    if choice == "fizzbuzz":
        print("FizzBuzz")
        return 1
    else:
        print("Incorrect, should be fizzbuzz")
        return 0

def numberoutput(myNumber, choice):
    if choice == "":
        print(myNumber)
        return 1
    else:
        print(f"Incorrect, should be nothing for {myNumber}")
        return 0

for i in range(1, 101):
    while True:
        try:
            myNumber = int(input(f"Enter a number between 1 and 100, current number is {i}: "))
            if myNumber == i:
                break
            else:
                print(f"Please enter the correct number, current number is {i}: ")
        except ValueError:
            print("Please enter a valid integer.")
    choice = input("Enter fizz if your number is divisible by 3, buzz if it is divisible by 5 or fizzbuzz if it is divisible by both or nothing if not divisible: ").strip().lower()
    score += fizz(myNumber, choice)

print(f"Your final score is {score}")



